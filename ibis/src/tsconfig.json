{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": false,
        "noEmitOnError": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
          "node_modules/@types/"
        ]
    }, 
    "compileOnSave": false,
    "include": [ "ng2/app" ]
}